<div class="card p-4" style="margin-bottom:15px;">
  <div class="card-header">
    Create tasks +
  </div>
  <form action="/tasks/add" method="POST">
    <div class="mb-3">
      <label class="form-label" for="title">Write a title</label>
      <input class="form-control" "text" name="title" placeholder="Title" id="title" />
    </div>

    <div class="mb-3">
      <label class="form-label"  for="description">Description</label>
      <textarea
        class="form-control"
        name="description"
        id="description"
        placeholder="Description..."
        
      ></textarea>
    </div>
    <button class="btn btn-primary" "submit">+</button>
  </form>

</div>